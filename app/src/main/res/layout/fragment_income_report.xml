<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.IncomeReportFragment"
    android:background="@drawable/borrow_total">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@color/colorTexts"
        android:layout_margin="10dp">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:entries="@array/days_array"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:id="@+id/spinnerIncome"

            ></Spinner>

        <include layout="@layout/get_between_dates_layout"
            android:visibility="invisible"
            android:id="@+id/incomebwDatesId"/>


    </LinearLayout>


</FrameLayout>

