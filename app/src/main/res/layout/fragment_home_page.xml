<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_background">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Welcome"
            android:textSize="15sp"
            android:id="@+id/tvHello"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:padding="10sp"
            android:gravity="center"
            android:background="@drawable/hellogradient"
            android:textColor="@color/colorTexts"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:background="@drawable/hometotal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Record"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:id="@+id/tvHomeTitle"
                android:textColor="#000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/savingtotal"
                android:layout_margin="5dp"
                android:padding="10sp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Income "
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_weight="3.5"
                    android:gravity="start"
                    android:textColor="@color/colorTexts"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="start"
                    android:textColor="@color/colorTexts"
                    android:id="@+id/incomeTotal"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5sp"
                android:padding="10dp"
                android:background="@drawable/expensetotal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Expense "
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_weight="3.5"
                    android:gravity="start"
                    android:textColor="@color/colorTexts" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="start"
                    android:textColor="@color/colorTexts"
                    android:id="@+id/expenseTotal" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
           android:layout_margin="15dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:background="@drawable/layout_corner"
                android:layout_weight="1"
                android:clickable="true"
                android:id="@+id/incomeLayout">
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/home_income"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Add Income"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_marginBottom="18dp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:background="@drawable/layout_corner"
                android:layout_weight="1"
                android:clickable="true"
                android:id="@+id/expenseLayout">
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/home_income"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Add Expense"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_marginBottom="18dp"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>

